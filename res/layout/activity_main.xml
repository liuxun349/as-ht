<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <FrameLayout style="@style/top" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|center_horizontal"
            android:gravity="center_vertical|center_horizontal"
            android:text="推荐详情"
            android:textColor="@color/title_text_color"
            android:textSize="@dimen/title_text_size" />

        <TextView
            android:id="@+id/tv_title_back"
            android:layout_width="@dimen/title_height"
            android:layout_height="@dimen/title_height"
            android:layout_gravity="center_vertical|left"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/title_back"
            android:textColor="@color/title_text_color"
            android:textSize="@dimen/title_text_size" />
    </FrameLayout>

    <LinearLayout
        style="@style/body"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="vertical" >

        <LinearLayout style="@style/setting_attribute_list" >

            <ImageView
                style="@style/setting_attribute_list_item_imageview_left"
                android:src="@drawable/setting_update" />

            <TextView
                style="@style/setting_attribute_list_item_textview"
                android:text="检查更新" />

            <ImageView
                style="@style/setting_attribute_list_item_imageview_right"
                android:src="@drawable/setting_ok" />
        </LinearLayout>

        <LinearLayout style="@style/setting_attribute_list" >

            <ImageView
                style="@style/setting_attribute_list_item_imageview_left"
                android:src="@drawable/setting_update" />

            <TextView
                style="@style/setting_attribute_list_item_textview"
                android:text="意见反馈" />

            <ImageView
                style="@style/setting_attribute_list_item_imageview_right"
                android:src="@drawable/setting_ok" />
        </LinearLayout>

        <LinearLayout style="@style/setting_attribute_list" >

            <ImageView
                style="@style/setting_attribute_list_item_imageview_left"
                android:src="@drawable/setting_update" />

            <TextView
                style="@style/setting_attribute_list_item_textview"
                android:text="法律声明" />

            <ImageView
                style="@style/setting_attribute_list_item_imageview_right"
                android:src="@drawable/setting_ok" />
        </LinearLayout>

        <LinearLayout style="@style/setting_attribute_list" >

            <ImageView
                style="@style/setting_attribute_list_item_imageview_left"
                android:src="@drawable/setting_update" />

            <TextView
                style="@style/setting_attribute_list_item_textview"
                android:text="关于我们" />

            <ImageView
                style="@style/setting_attribute_list_item_imageview_right"
                android:src="@drawable/setting_ok" />
        </LinearLayout>

        <LinearLayout style="@style/setting_attribute_list" >

            <ImageView
                style="@style/setting_attribute_list_item_imageview_left"
                android:src="@drawable/setting_update" />

            <TextView
                style="@style/setting_attribute_list_item_textview"
                android:text="系统设置" />

            <ImageView
                style="@style/setting_attribute_list_item_imageview_right"
                android:src="@drawable/setting_ok" />
        </LinearLayout>

        <LinearLayout style="@style/setting_attribute_list" >

            <ImageView
                style="@style/setting_attribute_list_item_imageview_left"
                android:src="@drawable/setting_update" />

            <TextView
                style="@style/setting_attribute_list_item_textview"
                android:text="退出登录" />

            <ImageView
                style="@style/setting_attribute_list_item_imageview_right"
                android:src="@drawable/setting_ok" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>