<?xml version="1.0" encoding="UTF-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/empty_cart_view"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/body_bg" >

    <include layout="@layout/app_toptitle" />

    <LinearLayout
        style="@style/body"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp" >

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/list_above" >

                <TextView
                    style="@style/register_font"
                    android:text="@string/text_card_class" />

                <Spinner
                    android:id="@+id/id_care"
                    style="@style/register_spinner"
                    android:layout_width="fill_parent"
                    android:layout_span="3"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_horizontal" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:background="@drawable/triangle_down" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/list_mid" >

                <TextView
                    style="@style/register_font"
                    android:text="@string/text_card_id" />

                <EditText
                    android:id="@+id/et_cardId"
                    style="@style/register_editTxv_font"
                    android:layout_weight="1"
                    android:background="@null" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/list_mid" >

                <TextView
                    style="@style/register_font"
                    android:text="@string/text_phone_number" />

                <EditText
                    android:id="@+id/et_phone"
                    style="@style/register_editTxv_font"
                    android:layout_weight="1"
                    android:background="@null" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/list_below" >

                <TextView
                    style="@style/register_font"
                    android:text="@string/text_check_number" />

                <EditText
                    android:id="@+id/et_checkNumber"
                    style="@style/register_editTxv_font"
                    android:layout_weight="1"
                    android:background="@null" />

                <Button
                    android:id="@+id/btn_getCheckNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/btn_defalut_selector"
                    android:text="@string/text_get_check_number"
                    android:textColor="@color/title_text_color" />
            </TableRow>
        </TableLayout>
    </LinearLayout>

</FrameLayout>